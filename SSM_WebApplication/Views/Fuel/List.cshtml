@model IEnumerable<SSM_WebApplication.Models.Fuel>
<div class="mx-auto w-75 p-3">
    <p class="h2" style="margin-bottom: 1em;">Liste des Carburants</p>
    <a class="btn btn-primary" asp-action="Create" role="button" style="margin-bottom: 1em;">Ajouter</a>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    Numéro
                </th>
                <th scope="col">
                    Carburant
                </th>
                <th scope="col">
                    Prix
                </th>
                <th scope="col">
                    Description
                </th>
                <th scope="col">
                    Active
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.FuelId)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.FuelName)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.FuelPrice)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.ShortDescription)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td scope="row">
                    <a asp-action="Edit" asp-route-id="@item.FuelId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.FuelId">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

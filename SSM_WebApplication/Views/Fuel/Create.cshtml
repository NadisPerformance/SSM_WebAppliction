@model SSM_WebApplication.Models.Fuel

<div class="mx-auto w-75 p-3">
    <form asp-action="Create">
        <div class="form-group row">
            <label asp-for="FuelName" class="col-sm-2 col-form-label">Nom</label>
            <div class="col-sm-10">
                <input asp-for="FuelName" class="form-control" placeholder="Nom" />
                <span asp-validation-for="FuelName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="FuelPrice" class="col-sm-2 col-form-label">Prix</label>
            <div class="col-sm-10">
                <input asp-for="FuelPrice" class="form-control" placeholder="Prix" />
                <span asp-validation-for="FuelPrice" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ShortDescription" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                <input asp-for="ShortDescription" class="form-control" placeholder="Description" />
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <input type="submit" value="Créer" class="btn btn-primary" />
            <a asp-action="List">Retour</a>
        </div>
    </form>
</div>
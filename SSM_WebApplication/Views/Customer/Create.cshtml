@model SSM_WebApplication.Models.Customer

<div class="mx-auto w-75 p-3">
    <div class="form-group row">
        <label asp-for="FirstName" class="col-sm-2 col-form-label">Type de client</label>
        <div class="col-sm-10">
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" id="EntrepriseRadio" name="CustomerTypeRadio" class="custom-control-input">
                <label class="custom-control-label" for="EntrepriseRadio">Entreprise</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" id="ParticularRadio" name="CustomerTypeRadio" class="custom-control-input">
                <label class="custom-control-label" for="ParticularRadio">Particulier</label>
            </div>
        </div>
    </div>
    
    <form asp-action="Create">
        <div class="form-group row">
            <label asp-for="FirstName" class="col-sm-2 col-form-label">Nom</label>
            <div class="col-sm-10">
                <input asp-for="FirstName" class="form-control" placeholder="Nom" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="LastName" class="col-sm-2 col-form-label">Prénom</label>
            <div class="col-sm-10">
                <input asp-for="LastName" class="form-control" placeholder="Prenom" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Company" class="col-sm-2 col-form-label">Société</label>
            <div class="col-sm-10">
                <input asp-for="Company" class="form-control" placeholder="Prenom" />
                <span asp-validation-for="Company" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ICE" class="col-sm-2 col-form-label">ICE</label>
            <div class="col-sm-10">
                <input asp-for="ICE" class="form-control col-xs-4" placeholder="ICE" />
                <span asp-validation-for="ICE" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Adresse1" class="col-sm-2 col-form-label">Adresse</label>
            <div class="col-sm-10">
                <input asp-for="Adresse1" class="form-control col-xs-4" placeholder="Adresse" />
                <span asp-validation-for="Adresse1" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Adresse2" class="col-sm-2 col-form-label">Compléments d'adresse</label>
            <div class="col-sm-10">
                <input asp-for="Adresse2" class="form-control col-xs-4" placeholder="Compléments d'adresse" />
                <span asp-validation-for="Adresse2" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="City" class="col-sm-2 col-form-label">Ville</label>
            <div class="col-sm-10">
                <input asp-for="City" class="form-control" placeholder="Ville" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Tel1" class="col-sm-2 col-form-label">Mobile</label>
            <div class="col-sm-10">
                <input asp-for="Tel1" class="form-control" placeholder="Mobile" />
                <span asp-validation-for="Tel1" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Tel2" class="col-sm-2 col-form-label">Fix</label>
            <div class="col-sm-10">
                <input asp-for="Tel2" class="form-control" placeholder="Fix" />
                <span asp-validation-for="Tel2" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ContactName" class="col-sm-2 col-form-label">Nom et prénom du contact</label>
            <div class="col-sm-10">
                <input asp-for="ContactName" class="form-control " placeholder="Contact" />
                <span asp-validation-for="ContactName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <input type="submit" value="Créer" class="btn btn-primary" />
            <a asp-action="List">Retour</a>
        </div>
    </form>
</div>

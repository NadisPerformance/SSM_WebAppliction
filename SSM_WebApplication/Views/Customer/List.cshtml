@model IEnumerable<SSM_WebApplication.Models.Customer>

<div class="mx-auto w-75 p-3">
    <p class="h2" style="margin-bottom: 1em;">Liste des clients</p>
    <a class="btn btn-primary" asp-action="Create" role="button" style="margin-bottom: 1em;">Ajouter</a>

    <p class="h2" style="margin-bottom: 1em;">Clients particulier</p>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    Numéro
                </th>
                <th scope="col">
                    Nom
                </th>
                <th scope="col">
                    Prénom
                </th>
                <th scope="col">
                    Adresse
                </th>
                <th scope="col">
                    Ville
                </th>
                <th scope="col">
                    Telephone
                </th>
                <th scope="col">
                    Email
                </th>
                <th scope="col">
                    Date d'ajout
                </th>
                <th scope="col">
                    Statut
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (item.ICE == null)
                {
                    <tr>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.CustomerId)
                        </td>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.Adresse1)
                            @Html.DisplayFor(modelItem => item.Adresse2)
                        </td>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.Tel1)
                            @Html.DisplayFor(modelItem => item.Tel2)
                        </td>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.AddDate)
                        </td>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td scope="row">
                            <a asp-action="Edit" asp-route-id="#">Edit</a> |
                            <a asp-action="Delete" asp-route-id="#">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <p class="h2" style="margin-bottom: 1em;">Clients professionnels</p>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    Numéro
                </th>
                <th scope="col">
                    Société
                </th>
                <th scope="col">
                    ICE
                </th>
                <th scope="col">
                    Adresse
                </th>
                <th scope="col">
                    Ville
                </th>
                <th scope="col">
                    Telephone
                </th>
                <th scope="col">
                    Email
                </th>
                <th scope="col">
                    Contact
                </th>
                <th scope="col">
                    Date d'ajout
                </th>
                <th scope="col">
                    Statut
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (item.ICE != null)
                {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.CustomerId)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Company)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.ICE)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Adresse1)
                    @Html.DisplayFor(modelItem => item.Adresse2)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Tel1)
                    @Html.DisplayFor(modelItem => item.Tel2)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.ContactName)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.AddDate)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td scope="row">
                    <a asp-action="Edit" asp-route-id="#">Edit</a> |
                    <a asp-action="Delete" asp-route-id="#">Delete</a>
                    @Html.ActionLink("Create", "Create", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
                }
            }
        </tbody>
    </table>
</div>
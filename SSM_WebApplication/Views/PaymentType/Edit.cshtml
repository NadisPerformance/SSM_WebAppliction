@model SSM_WebApplication.Models.PaymentType

<div class="mx-auto w-75 p-3">
    <h4>Modification du type de paiement N : @Html.DisplayFor(model => model.PaymentTypeId)</h4>
    <hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="PaymentTypeId" />
        <div class="form-group row">
            <label asp-for="PaymentTypeName" class="col-sm-2 col-form-label">Nom</label>
            <div class="col-sm-10">
                <input asp-for="PaymentTypeName" class="form-control" />
                <span asp-validation-for="PaymentTypeName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ShortDescription" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                <input asp-for="ShortDescription" class="form-control" />
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Status" />Active
            </label>
        </div>
        <div class="form-group">
            <input type="submit" value="Enregistrer" class="btn btn-primary" />
            <a asp-action="List">Retour</a>
        </div>
    </form>
</div>
@model SSM_WebApplication.Models.Employee

<div class="mx-auto w-75 p-3">
    <h4>Modification de l'employé N : @Html.DisplayFor(model => model.EmployeeId)</h4>
    <hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="EmployeeId" />
        <div class="form-group row">
            <label asp-for="FirstName" class="col-sm-2 col-form-label">Nom</label>
            <div class="col-sm-10">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="LastName" class="col-sm-2 col-form-label">Prénom</label>
            <div class="col-sm-10">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Adresse1" class="col-sm-2 col-form-label">Adresse</label>
            <div class="col-sm-10">
                <input asp-for="Adresse1" class="form-control" />
                <span asp-validation-for="Adresse1" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Adresse2" class="col-sm-2 col-form-label">Complément d'adresse</label>
            <div class="col-sm-10">
                <input asp-for="Adresse2" class="form-control" />
                <span asp-validation-for="Adresse2" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="City" class="col-sm-2 col-form-label">Ville</label>
            <div class="col-sm-10">
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Tel1" class="col-sm-2 col-form-label">Téléphone</label>
            <div class="col-sm-10">
                <input asp-for="Tel1" class="form-control" />
                <span asp-validation-for="Tel1" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="JobId" class="control-label">Poste</label>
            <div class="col-sm-10">
                <select asp-for="JobId" class="form-control" asp-items="ViewBag.JobName"></select>
                <span asp-validation-for="JobId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="HiringDate" class="control-label">Date d'embauche</label>
            <div class="col-sm-10">
                <input asp-for="HiringDate" class="form-control" />
                <span asp-validation-for="HiringDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Status" />Active
            </label>
        </div>
        <div class="form-group">
            <input type="submit" value="Enregistrer" class="btn btn-primary" />
            <a asp-action="List">Retour</a>
        </div>
    </form>
</div>